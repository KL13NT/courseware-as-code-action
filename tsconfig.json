{
  "compilerOptions": {
    "jsx": "preserve",
    "target": "es6",
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "lib/*": [
        "./src/lib/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "scripts/*": [
        "./src/scripts/*"
      ],
      "interfaces/*": [
        "src/interfaces/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules",
    "**/*.js",
    "**/*.test.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
