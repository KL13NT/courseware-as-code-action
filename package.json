{
	"name": "courseware-as-code-github-action",
	"version": "0.0.0",
	"private": true,
	"description": "Automate collaborative courseware maintenance and production with ease!",
	"exports": "./dist/index.js",
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"build": "tsc && resolve-tspaths",
		"format": "prettier --write '**/*.ts'",
		"format-check": "prettier --check '**/*.ts'",
		"lint": "eslint src/**/*.ts",
		"package": "ncc build dist/index.js --source-map --license licenses.txt -o dist",
		"test": "jest jest --colors --expand --logHeapUsage --config jest.config.js --verbose",
		"prerelease": "npm run lint && npm run test",
		"release": "npm run build && npm run package"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/actions/typescript-action.git"
	},
